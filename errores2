using namespace std;

int main() {
     
     float base, altura,area;
	 cout<<"        calculo del area del triangulo \n\n";
	 cout<<"ingrese altura: ";
     cin>>altura;
     cout<<"ingrese base: ";
     cin>>base;

     area = (base*altura)/2;
	 cout<<"el area es: ";
     cout<<area;
