#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	float cont,s,d;
	int num,r;

	cout<<"ingrese num:";
	cin>>num;
	cout<<"ingrese r:";
	cin>> r;
	

	cont=0;
	s=0;
	while(num!=0)
	{d=num%r;
	    num=num/r;
		s=s+d*pow(10,cont);
		cont=cont+1;}
		


			cout<<" la sumatoria es:"<<s;
			getch();
}
