void RLeer(int *N)
{printf ("\n\n Ingrese el numero N: ");
scanf ("%d",N);
}
void Fac(int *N,int *fac)
{*fac=1;
for (int i=1;i<=*N;i++)
	{*fac=*fac*i;
	}
}

void main()
{int N,fac;
RLeer(&N);
Fac(&N,&fac);
printf ("El factorial de %d numeros es: %d \n",N,fac);
getch();
}
